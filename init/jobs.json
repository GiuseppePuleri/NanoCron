{
  "jobs": [
    {
      "description": "Example job",
      "command": "/opt/db/maintenance.sh --optimize",
      "schedule": {
        "minute": "0",
        "hour": "3",
        "day_of_month": "*",
        "month": "*",
        "day_of_week": "6"
      },
      "conditions": {
        "cpu": "<70%",
        "ram": "<85%",
        "loadavg": "<2.5",
        "disk": {
          "/var/lib/mysql": "<80%"
        }
      }
    },
    }
  ]
}
